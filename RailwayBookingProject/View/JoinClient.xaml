                <Image Source="C:\Users\pil02\Desktop\RailwayBookingProject-master\RailwayBookingProject-master\RailwayBookingProject\Photo\телега.png" Height="59" Width="42" Margin="0,0,10,0" />


                <Image Source="C:\Users\pil02\Desktop\RailwayBookingProject-master\RailwayBookingProject-master\RailwayBookingProject\Photo\odnoklasniki.png" Height="59" Width="42" />





