<Window x:Class="RailwayBookingProject.View.JoinClient"
       xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        Background ="Aqua"
        Title="Вход" Height="500" Width="350">

    <Grid Margin="0,0,10,-16">
        <StackPanel VerticalAlignment="Center" Margin="20" Cursor="Hand">


            <TextBlock Text="Вход" 
                   FontSize="26" 
                   FontWeight="Bold" 
                   Foreground="DarkBlue" 
                   Margin="0,0,0,40"
                   Width="216"/>

            <TextBox x:Name="Email" Margin="0,0,0,10" materialDesign:HintAssist.Hint="Email"/>
            <PasswordBox x:Name="Password"  Margin="0,0,0,10" materialDesign:HintAssist.Hint="Пароль"/>

            <TextBlock Text="Не помню пароль" Foreground="Blue" HorizontalAlignment="Right" Margin="0,0,0,5" Cursor="Hand"/>

            <Button Content="Войти" Background="#FF7F7FFF" Foreground="White" Padding="5" Margin="0,0,0,10" Click="Button_Click"/>

            <TextBlock HorizontalAlignment="Center"><Run Text="Нет профиля? "/>
            <Hyperlink Click="Hyperlink_Click">
            <Run Text="Зарегистрируйтесь, это легко!" Foreground="Blue" Cursor="Hand"/>
            </Hyperlink></TextBlock>

            <TextBlock Text="или войдите с помощью" HorizontalAlignment="Center" Margin="0,10,0,10"/>

